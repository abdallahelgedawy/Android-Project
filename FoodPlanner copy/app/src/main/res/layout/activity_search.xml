<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.view.SearchActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/foreground_design"
        android:scaleType="centerCrop"
        android:src="@drawable/ten"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btn_country"
        android:layout_width="380dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="128dp"
        android:text="Search by Country"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_category"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_category"
        android:layout_width="380dp"
        android:layout_height="96dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="128dp"
        android:text="Search by Category"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ingredients"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ingredients"
        android:layout_width="380dp"
        android:layout_height="96dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="112dp"
        android:text="Search By Ingredients"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>